<Window x:Class="MediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaPlayer"
        xmlns:controls="clr-namespace:MediaPlayer.Controls"
        xmlns:converters="clr-namespace:SystemExtension.MVVM.Converters;assembly=SystemWindowsExtension"
        mc:Ignorable="d" Background="{DynamicResource MainBackgroundBrush}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <controls:MediaElementExtended x:Name="media"/>
        <Slider Grid.Row="1" Value="{Binding ElementName=media, Path=Position}"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Grid.Row="2" Content="Play"/>
            <Button Grid.Row="2" Content="Pause" Command="{Binding ElementName=media, Path=PauseCommand}"/>
        </StackPanel>
    </Grid>
</Window>