<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="LAccentColor">#FFFF8888</Color>
    <Color x:Key="NAccentColor">#FFFF4444</Color>
    <Color x:Key="HAccentColor">#FFFF0000</Color>

    <SolidColorBrush x:Key="LAccentBrush" Color="{DynamicResource LAccentColor}"/>
    <SolidColorBrush x:Key="NAccentBrush" Color="{DynamicResource NAccentColor}"/>
    <SolidColorBrush x:Key="HAccentBrush" Color="{DynamicResource HAccentColor}"/>
</ResourceDictionary>