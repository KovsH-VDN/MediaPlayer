<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="LAccentColor">#FF88FF88</Color>
    <Color x:Key="NAccentColor">#FF44FF44</Color>
    <Color x:Key="HAccentColor">#FF00E000</Color>

    <SolidColorBrush x:Key="LAccentBrush" Color="{DynamicResource LAccentColor}"/>
    <SolidColorBrush x:Key="NAccentBrush" Color="{DynamicResource NAccentColor}"/>
    <SolidColorBrush x:Key="HAccentBrush" Color="{DynamicResource HAccentColor}"/>
</ResourceDictionary>