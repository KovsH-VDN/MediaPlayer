<Application x:Class="MediaPlayer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MediaPlayer"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Constants.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Templates.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Icons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonBase}"/>
            <Style TargetType="{x:Type Slider}" BasedOn="{StaticResource RangeBase}"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
