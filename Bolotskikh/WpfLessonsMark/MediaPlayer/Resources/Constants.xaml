<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <Thickness x:Key="BaseBorderThickness">2</Thickness>
    <Thickness x:Key="MouseOverBorderThickness">3</Thickness>
    <Color x:Key="EnabledColor">DarkGray</Color>
    <Color x:Key="MouseOverColor">LightGray</Color>
    <Color x:Key="GradientSecondColor">White</Color>
    <Color x:Key="DisabledColor">DimGray</Color>
    <Color x:Key="BackgroundColor">DarkSlateGray</Color>
    <SolidColorBrush x:Key="EnabledColorBrush" Color="{DynamicResource EnabledColor}"/>
    <SolidColorBrush x:Key="DisabledColorBrush" Color="{DynamicResource DisabledColor}"/>
    <SolidColorBrush x:Key="MouseOverColorBrush" Color="{DynamicResource MouseOverColor}"/>
    <SolidColorBrush x:Key="BackgroundColorBrush" Color="{DynamicResource BackgroundColor}"/>
    <sys:Double x:Key="ButtonSize">50</sys:Double>

    <sys:Double x:Key="CanvasSize">100</sys:Double>
</ResourceDictionary>